@model IEnumerable<batterymetrics.Models.Device>

@{
    ViewData["Title"] = "Device List";
}
<div class="row">
    <div class="col-md-4">
        <h3>@ViewData["Title"]</h3>
    </div>
</div>

<div class="row">
    <div class="col-md-4 col-lg-12">
        @if(@ViewData["Message"] != null){
            <p>@ViewData["Message"]</p>
        }
    </div>
</div>

@if (Model.Count() > 0)
{
<div class="row">
    <div class="col-md-4 col-lg-12">
        <table class="table">
            <thead>
                <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.deviceId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.accntNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.timestamp)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.jsonData)
                        </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) 
        {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.deviceId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.accntNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.timestamp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.jsonData)
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>
}

<a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back</a>
<a class="btn btn-primary" asp-controller="Device" asp-action="FileUpload">File Upload</a>

