@model IEnumerable<batterymetrics.Models.Metric>

@{
    ViewData["Title"] = "Battery Metrics";
}
<div class="row">
    <div class="col-md-4">
        <h3>@ViewData["Title"]</h3>
    </div>
</div>

<div class="row">
    <div class="col-md-4 col-lg-12">
        @if(@ViewData["Message"] != null){
            <p>@ViewData["Message"]</p>
        }
    </div>
</div>

@if(Model.Count() > 0) 
{
    <table class="table">
    <thead>
        <tr>
            <th>
            @Html.DisplayNameFor(model => model.DeviceId)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.AccNum)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.BatteryLifetime)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.ChargeTime)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Cycles)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.LevelCycles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeviceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BatteryLifetime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChargeTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cycles)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LevelCycles)
            </td>

        </tr>
}
    </tbody>
</table>
}

<a class="btn btn-primary" asp-controller="Device" asp-action="Index">Manage Device Data</a>
@if(Model.Count() > 0)
{
    <a class="btn btn-success" asp-controller="Device" asp-action="Delete">Reset Data</a>
    <a class="btn btn-success" asp-controller="Email" asp-action="Email">Email Data</a>
}
